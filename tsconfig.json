{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "removeComments": true,
    "stripInternal": true,
    "outDir": "lib_commonjs/",
    "rootDir": "src",
    "lib": ["dom", "es2018", "esnext.asynciterable"],
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "compileOnSave": false,
  "buildOnSave": false,
  "angularCompilerOptions": {
    "decoratorsAs": "static fields",
    "skipTemplateCodegen": true,
    "preserveWhitespaces": false
  }
}
